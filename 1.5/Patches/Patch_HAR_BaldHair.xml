<?xml version="1.0" encoding="utf-8" ?>
<Patch>


  <Operation Class="PatchOperationFindMod" IfModActive="erdelf.HumanoidAlienRaces">
	<mods>
		<li>Humanoid Alien Races</li>
	</mods>
	
	<match Class="PatchOperationSequence">
	  <operations>
		<li Class="PatchOperationRemove">
		  <xpath>Defs/HairDef[defName="Bald"]/noGraphic</xpath>
		</li>
		<li Class="PatchOperationAdd">
		  <xpath>Defs/HairDef[defName="Bald"]</xpath>
		  <value>
			<texPath>Things/Mote/Transparent</texPath>
		  </value>
		</li>
	  </operations>
	</match>
  
  </Operation>
	

</Patch>